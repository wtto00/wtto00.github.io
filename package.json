{
  "name": "blog",
  "displayName": "Blog",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint --color --fix .",
    "zhlint:all": "zhlint \"{,!(node_modules)/**/}*.md\" --fix",
    "format": "prettier . --write --ignore-unknown",
    "prepare": "husky && echo npx lint-staged > .husky/pre-commit"
  },
  "dependencies": {
    "@astrojs/check": "^0.4.1",
    "@astrojs/markdown-remark": "^4.0.1",
    "@astrojs/rss": "^4.0.2",
    "@astrojs/sitemap": "^3.0.4",
    "@astrojs/solid-js": "^4.0.1",
    "@resvg/resvg-js": "^2.6.0",
    "astro": "^4.1.2",
    "fuse.js": "^7.0.0",
    "github-slugger": "^2.0.0",
    "qrcode": "^1.5.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "solid-js": "^1.8.10",
    "solid-satori": "^0.0.2",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@unocss/eslint-config": "^0.58.3",
    "@unocss/preset-typography": "^0.58.3",
    "@unocss/preset-uno": "^0.58.3",
    "@unocss/reset": "^0.58.3",
    "@unocss/transformer-directives": "^0.58.3",
    "@unocss/transformer-variant-group": "^0.58.3",
    "eslint": "^8.56.0",
    "eslint-plugin-astro": "^0.31.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-solid": "^0.13.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "sharp": "^0.33.1",
    "unocss": "^0.58.3",
    "unocss-preset-theme": "^0.12.0",
    "zhlint": "^0.7.3"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown",
      "astro check"
    ],
    "*.{js,mjs,jsx,ts,mts,tsx,astro}": [
      "eslint --fix"
    ],
    "*.md": [
      "pnpm zhlint:all",
      "node scripts/md-hook.js"
    ]
  }
}
