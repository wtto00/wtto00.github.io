---
import ScrollToTopBtn from "./ScrollToTopBtn.astro";

---

<astro-article class="prose-wtto block max-w-unset w-full prose">
  <slot />

  <ScrollToTopBtn />
</astro-article>

<script>
  import { addCopyCodeBtn, headLinkCopy } from '@/utils/mdScripts';

  class AstroArticle extends HTMLElement {
    constructor() {
      super();

      addCopyCodeBtn();
      headLinkCopy();
    }
  }

  customElements.define('astro-article', AstroArticle);
</script>
