---
import type { CollectionEntry } from 'astro:content'

import { unicodeSlugify } from '@/utils/slugify'

import SubTitle from './SubTitle.astro'

export interface Props {
  href?: string
  frontmatter: CollectionEntry<'blog'>['data']
  secHeading?: boolean
}

const { href = '', frontmatter, secHeading = true } = Astro.props
const { title, pubDatetime, description } = frontmatter

const titleClass = 'text-lg font-medium decoration-dashed hover:underline'
const titleTransitionName = unicodeSlugify(title)
---

<li class="my-6">
  <a
    href={href}
    class="inline-block text-lg c-accent font-medium underline-offset-4 decoration-dashed focus-visible:underline-offset-0 focus-visible:no-underline"
  >
    {
      secHeading ? (
        <h2 class={titleClass} transition:name={titleTransitionName}>
          {title}
        </h2>
      ) : (
        <h3 class={titleClass} transition:name={titleTransitionName}>
          {title}
        </h3>
      )
    }
  </a>
  <SubTitle datetime={pubDatetime} />
  <p>{description}</p>
</li>
